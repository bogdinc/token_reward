        require(amount > 0, "Nothing to claim");
        IBEP20 cntr = IBEP20(coinContract);
        require(amount <= cntr.balanceOf(address(this)), "Insufficient coin amount on contract balance");
        cntr.safeTransfer(_msgSender(), amount);
        if (_balances[_msgSender()][lastRewardId] == 0 && !_isActive[_msgSender()][lastRewardId]) {
            _balances[_msgSender()][lastRewardId] = lastBalance;
        }
        _lastClaimedRewardId[_msgSender()] = lastRewardId;
        emit RewardClaimed(_msgSender(), amount);
    }


